<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000">

    <com.staticbloc.widgets.BubbleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_below="@+id/top"
        android:layout_toEndOf="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:layout_above="@+id/bottom"
        android:layout_toStartOf="@+id/right"
        android:layout_toLeftOf="@+id/right"
        app:bv_content="@layout/bubble_content"
        app:bv_decoration_color="#f00"
        app:bv_decoration_width="50dp"
        app:bv_decoration_height="17.5dp"
        app:bv_decoration_gravity="bottom"
        app:bv_decoration_location="center"/>

    <Button
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Top"/>

    <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Right"/>

    <Button
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Bottom"/>

    <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Left"/>

</RelativeLayout>